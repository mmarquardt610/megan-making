<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'simple-field p-style col-6' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'simple-field p-style col-6' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'p-style' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
