<div class='Post'>
  <h2>
    <%= link_to post.title, post_path(post) %>
  </h2>
  <div class='detail'>
    Added <%= post.created_at.strftime('%b %e, %Y') %>
    <% if user_signed_in? %>
      | 
      <%= link_to 'Edit', edit_post_path(post) %>
      |
      <%= link_to 'Delete', post_path(post), method: :delete %>
    <% end %>
  </div>
  <div class='PostContent'>
    <%= markdown_render(post.content) %>
  </div>
</div>